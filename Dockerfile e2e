# syntax=docker/dockerfile:1
FROM --platform=linux/amd64 timbru31/java-node:8-12
WORKDIR /datatools-ui

RUN mkdir -p /datatools-ui/e2e-test-results/
RUN touch /datatools-ui/e2e-test-results/client-dev-server.pid
RUN touch /datatools-ui/e2e-test-results/datatools-server.pid
RUN touch /datatools-ui/e2e-test-results/otp.pid

RUN apt-get clean
RUN apt-get update
RUN apt-get install -y git
# Puppeteer deps
RUN apt-get install -y gconf-service libasound2 libatk1.0-0 libc6 libcairo2 libcups2 libdbus-1-3 libexpat1 libfontconfig1 libgcc1 libgconf-2-4 libgdk-pixbuf2.0-0 libglib2.0-0 libgtk-3-0 libnspr4 libpango-1.0-0 libpangocairo-1.0-0 libstdc++6 libx11-6 libx11-xcb1 libxcb1 libxcomposite1 libxcursor1 libxdamage1 libxext6 libxfixes3 libxi6 libxrandr2 libxrender1 libxss1 libxtst6 ca-certificates fonts-liberation libappindicator1 libnss3 lsb-release xdg-utils wget
RUN yarn global add https://github.com/ibi-group/otp-runner.git
RUN yarn global add mastarm

COPY package.json yarn.lock /datatools-ui/
RUN yarn
COPY . /datatools-ui/

ENV SHOULD_RUN_E2E=true
ENV CI=true
ENV TEST_FOLDER_PATH=/datatools-ui/e2e-test-results
CMD yarn test-end-to-end

